          input(type='email', value='', name='EMAIL', placeholder='Your email address', required='required')
          input.honey(type='text', name='b_eb1baf73af6cc872dd06ed858_7f60b90055', tabindex='-1', value='' style="width:0;height:0;opacity:0;")
          input(type='submit', value='Subscribe', name='subscribe')

      footer
        &nbsp;
