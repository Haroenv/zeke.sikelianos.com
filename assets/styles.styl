*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body
  font-family 'helvetica neue', helvetica, arial
  // font-weight bold
  color #777
  padding 0
  margin 0

#content
  margin-left auto
  margin-right auto
  position relative
  // min-width 320px
  max-width 600px
  padding 20px 20px 100px 20px

.logo
  text-align center
  img
    display block
    -webkit-border-radius 5px
    -moz-border-radius 5px
    border-radius 5px
    height auto
    width 100%

a
  color #C00
  text-decoration none

p
  font-size 18px
  line-height 1.5
  max-width 480px
  padding: 10px 0
  margin: 0
  &.paltry
    font-size 13px
    opacity 0.7
    padding-top 0
    font-style italic
    // font-weight bold

h2
  font-size 80px
  color #CCC
  color black
  // border-bottom 1px dashed #CCC
  margin 0
  padding 40px 0 10px 0

h3
  font-size 20px
  color #CCC
  // border-bottom 1px dashed #CCC
  margin 0
  padding 20px 0 0px 0

  em
    padding-left 10px
    font-style normal
    font-weight normal
    font-size 16px
    color #999

ul
  margin 0
  padding 0
  list-style none
  li
    padding 10px 0

@media screen and (max-width: 420px)
  h2
    font-size 48px
