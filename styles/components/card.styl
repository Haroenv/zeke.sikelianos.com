@require '../variables'
@require '../util'
@require '../base'

.cards
  @extend .vanilla-list
  display block
  float none
  clear both
  overflow hidden

.card
  @extend .float-left
  height 360px
  width card-width
  padding 0
  margin 0
  margin-left (card-gutter-width/2)
  margin-right (card-gutter-width/2)
  margin-bottom 40px

  @media screen and (max-width: mobile-width)
    @extend .float-none
    width 100%
    height auto
    margin 0
    margin-bottom 50px

.card-inner
  display block
  -webkit-box-shadow 0px 1px 15px 1px rgba(0,0,0,0.08)
  -moz-box-shadow 0px 1px 15px 1px rgba(0,0,0,0.08)
  box-shadow 0px 1px 15px 1px rgba(0,0,0,0.08)

.card-thumbnail
  width 100%
  height card-thumbnail-height
  overflow hidden
  background white
  img
    width: 100%

.card-details
  padding 14px 20px
  overflow hidden
  text-align center
  background white
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px
  @media screen and (max-width: mobile-width)
    background none


.card-details-title
  font-size: 1rem
  line-height 1.6

.card-details-description
  font-size: 0.9rem
  @extend .faint
  @extend .unpadded
  @extend .small-text
  text-align center
  line-height 1.4
